<% if current_page?(new_user_registration_path) || current_page?(new_user_session_path) %>
  <style>
  .navbar {
    display: none;
  }
</style>
<% else %>
  <nav class="navbar">
    <li class="nav-item">
      <%= link_to "Главная", root_path, class: "nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to "О нас", about_path,  class: "nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to "Связаться", contacts_path, class: "nav-link" %>
    </li>
    
    <% if current_user %>
      <li class="nav-item">
         <%= link_to 'Профиль', users_show_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
         <%= link_to 'Корзина', cart_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
         <%= link_to 'Список квартир', apartments_path, class: "nav-link" %>
      </li>
      <li class="home-buttons">
        <%= link_to "Выход", destroy_user_session_path, 'data-turbo-method': :delete, class: "sign-out"%>
      </li>
    <% else %>
      <li class="home-buttons">
        <%= link_to "Sign In", new_user_session_path, class: "log-in" %>
      </li>
      <li class="home-buttons">
        <%= link_to "Sign Up", new_user_registration_path, class: "sign-up" %>
      </li>
    <% end %>
</nav>
<% end %>
